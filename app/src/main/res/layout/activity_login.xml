<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zahid.yoga.Fragments.LoginActivity">

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_Member_Login"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Member Login" />

        <EditText
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/editTxt_Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Email"
            android:layout_below="@+id/txt_Member_Login"/>

        <EditText
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/editTxt_Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_below="@+id/editTxt_Email"/>

        <Button
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/btn_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:layout_below="@+id/editTxt_Pass"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt_Forgot_Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password"
            android:layout_below="@+id/btn_Login"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_Forgot_Pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Member"/>

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/txt_SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:layout_toRightOf="@+id/textView4"/>

        </RelativeLayout>



    </RelativeLayout>






</RelativeLayout>
